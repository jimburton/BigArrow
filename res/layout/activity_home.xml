<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/uk.ac.brighton.ci360.bigarrow"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="#0066cc"
    android:orientation="vertical"
    android:padding="30dip" >

    <uk.ac.brighton.ci360.bigarrow.ui.TypefacedTextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dip"
        android:text="@string/main_title" 
        android:textSize="30sp" 
        android:textColor="@color/black"
        font:typeface="RobotoBold.ttf"/> 

    <uk.ac.brighton.ci360.bigarrow.ui.TypefacedButton
        android:id="@+id/bigarrow_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/bigarrow_button_label"
        android:onClick="onClick"
        android:textSize="25sp"
        android:background="@color/black"
        android:textColor="@color/white"
        font:typeface="RobotoThin.ttf" />

    <uk.ac.brighton.ci360.bigarrow.ui.TypefacedButton
        android:id="@+id/list_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/list_button_label"
        android:onClick="onClick" 
        android:textSize="25sp"
        android:background="@color/black"
        android:textColor="@color/white"
        font:typeface="RobotoThin.ttf" />
    
    <uk.ac.brighton.ci360.bigarrow.ui.TypefacedButton
        android:id="@+id/map_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/map_button_label"
        android:onClick="onClick" 
        android:textSize="25sp"
        android:background="@color/black"
        android:textColor="@color/white"
        font:typeface="RobotoThin.ttf" />

</LinearLayout>
